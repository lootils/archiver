{
    "name": "lootils/archiver",
    "description": "An abstraction library to interface with file archives.",
    "type": "library",
    "homepage": "https://github.com/lootils/archiver",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "pear/Archive_Tar": "1.3.*"
    },
    "suggest": {
        "zip": "Allows interfacing with zip archives."
    },
    "autoload": {
        "psr-0": {
            "Lootils\\Archiver": "src/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "pear/Archive_Tar",
                "version": "1.3.10",
                "dist": {
                    "url": "https://github.com/pear/Archive_Tar/zipball/master",
                    "type": "zip"
                },
                "source": {
                    "url": "git://github.com/pear/Archive_Tar.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "minimum-stability": "dev"
}
